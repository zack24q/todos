@require 'global.styl'

.todo-list {
  width 80%
  margin auto
  padding-bottom 50px

  .title {
    margin 0
    line-height 80px
    text-align center
  }

  .content {
    box-shadow 0 1px 2px 0 #505050
  }

  .input-box {
    $rowStyle()
    input {
      border none
      display block
      width 100%
      font-size 20px
      outline none
      line-height 30px
    }
    .arrow {
      position absolute
      left 6px
      top: -9px
      line-height 1
      transform: rotate(90deg)
      z-index 1
      color $grey
    }

    .arrow.enable {
      color inherit
    }
  }
}